{% extends "StefCurrencyServiceBundle::layout.html.twig" %}

{% block content %}
    <div class="col-md-6">
        <form class="form-horizontal" action="" method="post" {{form_enctype(form) }}>
            {{ form_widget(form) }}

            <button type="submit">Convert</button>

        </form>
    </div>

    <div class="col-md-6">
        {% if exchange is defined %}
            <br/>
            <h2>Result</h2>
            <br/>
            <table class="table table-hover">
                <tr>
                    <th>Description</th>
                    <th>Value</th>
                </tr>
                <tr>
                    <td>Exchange</td>
                    <td>{{ exchange }}</td>
                </tr>
                <tr>
                    <td>Calculated amount</td>
                    <td>{{ calculated }}</td>
                </tr>
            </table>
        {% endif %}
    </div>
{% endblock %}